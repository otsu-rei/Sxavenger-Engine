#include "Particle.hlsli"

////////////////////////////////////////////////////////////////////////////////////////////
// PSOutput sturucture
////////////////////////////////////////////////////////////////////////////////////////////
struct PSOutput {
	float4 color : SV_TARGET0;
};

////////////////////////////////////////////////////////////////////////////////////////////
// main
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(VSOutput input) {

	PSOutput output;
	
	output.color = input.color;
	
	if (output.color.a == 0.0f) {
		discard;
	}
	
	return output;
}
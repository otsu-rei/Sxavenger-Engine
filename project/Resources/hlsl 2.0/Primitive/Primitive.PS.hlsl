#include "Primitive.hlsli"

//=========================================================================================
// Buffer
//=========================================================================================
Texture2D<float4> gTexture : register(t0);
SamplerState      gSampler : register(s0);

////////////////////////////////////////////////////////////////////////////////////////////
// main
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(VSOutput input) {
	
	PSOutput output;
	
	output.color = gTexture.Sample(gSampler, input.texcoord) * input.color;
	
	return output;
	
}
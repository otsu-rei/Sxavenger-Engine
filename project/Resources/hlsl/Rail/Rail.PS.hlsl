#include "Rail.hlsli"

//=========================================================================================
// Buffer
//=========================================================================================

Texture2D<float4> gAlbedo : register(t0);
SamplerState gSampler     : register(s0);

////////////////////////////////////////////////////////////////////////////////////////////
// main
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(GSOutput input) {

	PSOutput output;

	output.color = gAlbedo.Sample(gSampler, input.texcoord) * input.color;

	if (output.color.a <= 0.0f) {
		discard;
	}

	return output;
	
}
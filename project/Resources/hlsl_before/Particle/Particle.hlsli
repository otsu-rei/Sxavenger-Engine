#pragma once

////////////////////////////////////////////////////////////////////////////////////////////
// VSOutput structure
////////////////////////////////////////////////////////////////////////////////////////////
struct VSOutput {
	float4 position : SV_POSITION;
	float4 color    : COLOR0;
	float3 normal   : NORMAL0;
	float3 worldPos : POSITION0;
	float2 texcoord : TEXCOORD0;
};

////////////////////////////////////////////////////////////////////////////////////////////
// Particle structure
////////////////////////////////////////////////////////////////////////////////////////////
struct Particle {
	float4 color;
	float3 scale;
	float3 translate;
	float3 velocity;
	float currentTime;
	float lifeTime;
};
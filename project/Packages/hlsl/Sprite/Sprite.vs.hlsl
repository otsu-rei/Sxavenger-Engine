////////////////////////////////////////////////////////////////////////////////////////////
// main
////////////////////////////////////////////////////////////////////////////////////////////
VSOutput main(VSInput input) {

	VSOutput output = (VSOutput)0;

	output.position = mul(mul(input.position, gTransform.transform2d), gProjection.proj);
	output.color    = input.color;
	output.texcoord = input.texcoord;

	return output;
}

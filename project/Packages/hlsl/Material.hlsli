#pragma once

////////////////////////////////////////////////////////////////////////////////////////////
// UVTransformationMatrix structure
////////////////////////////////////////////////////////////////////////////////////////////
struct UVTransformationMatrix {
	float4x4 mat;

	float2 Transform(float2 texcoord) {
		return mul(float4(texcoord, 0.0f, 1.0f), mat).xy;
	}
};

////////////////////////////////////////////////////////////////////////////////////////////
// MaterialColor structure
////////////////////////////////////////////////////////////////////////////////////////////
struct MaterialColor {
	float4 color;
};


